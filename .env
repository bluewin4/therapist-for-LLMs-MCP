# Sample environment configuration for MCP Therapist
# Copy this file to .env and modify as needed

# General settings
MCP_THERAPIST_DEBUG=False
MCP_THERAPIST_LOG_LEVEL=INFO

# Conversation settings
MCP_THERAPIST_DEFAULT_WINDOW_SIZE=5
MCP_THERAPIST_MAX_CONVERSATION_HISTORY=100

# Rut detection settings
MCP_THERAPIST_REPETITION_THRESHOLD=0.7
MCP_THERAPIST_STAGNATION_THRESHOLD=0.85

# Intervention settings
MCP_THERAPIST_INTERVENTION_COOLDOWN=3
MCP_THERAPIST_MAX_INTERVENTIONS_PER_CONVERSATION=5

# MCP settings (disabled by default)
MCP_THERAPIST_MCP_ENABLED=False
# MCP_THERAPIST_MCP_SERVER_URL=http://localhost:8000/mcp

# LLM settings (disabled by default)
MCP_THERAPIST_SECONDARY_LLM_ENABLED=False
# MCP_THERAPIST_SECONDARY_LLM_API_KEY=your-api-key-here
# MCP_THERAPIST_SECONDARY_LLM_MODEL=gpt-3.5-turbo
